<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_dashboard_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="APK Sentinel Dashboard"
        android:textColor="#333333"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_dashboard_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Welcome to APK Sentinel. Navigate through the tabs to access developer options and view installed APKs."
        android:textColor="#666666"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_dashboard_title" />

    <!-- Health Score Gauge/Progress Bar -->
    <ProgressBar
        android:id="@+id/healthScoreProgress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="32dp"
        android:indeterminate="false"
        android:max="100"
        android:progress="70"
        android:progressDrawable="@android:drawable/progress_horizontal"
        android:rotation="-90"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_dashboard_description" />

    <!-- Health Score Numeric Display -->
    <TextView
        android:id="@+id/tv_healthScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="70%"
        android:textColor="#FF0000"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@id/healthScoreProgress"
        app:layout_constraintEnd_toEndOf="@id/healthScoreProgress"
        app:layout_constraintStart_toStartOf="@id/healthScoreProgress"
        app:layout_constraintTop_toTopOf="@id/healthScoreProgress" />

    <!-- Recommendations List -->
    <TextView
        android:id="@+id/tv_recommendations"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Recommendations:\n1. Disable USB Debugging\n2. Update Security Patch\n3. Uninstall XYZ APK"
        android:textColor="#666666"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/healthScoreProgress" />



</androidx.constraintlayout.widget.ConstraintLayout>
